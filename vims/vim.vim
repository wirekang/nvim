set nocompatible
set shortmess+=c
set nobackup
set noswapfile
set nowrapscan
syntax on
set history=1000
set mouse-=a
set fileencoding=utf-8
set hlsearch
set ignorecase
set incsearch
set hidden
set autoindent
set smartindent
set nu
set relativenumber
set signcolumn=yes
set cmdheight=2
set laststatus=2
set cursorline
set updatetime=100
inoremap jj <Esc>
let mapleader=" "
nnoremap <C-Space> <Nop>
set colorcolumn=90
set clipboard=unnamedplus

